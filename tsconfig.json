{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2017",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dists",  // TS文件编译后会放入到此文件夹内
        "baseUrl": ".",
        "typeRoots" : [
            "node_modules/@types",
            "node_modules/koa-body",
        ],
        "paths": {
            "*": [
                "node_modules/*",
                "src/types/*",
            ]
        }
    },
    "include": [
        "src/**/*"
    ]
}